<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="300" height="250" title="Export"
		 close="closeWindow()"
		 >
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager;
			
			import message.Message;
			import message.MessageDispatcher;
			
			import control.ExportDataCommand;
			
			import model.ImportDataProxy;
			
			private function exportData():void{
				if(!ImportDataProxy.getInstance().skeletonName){
					return;
				}
				MessageDispatcher.addEventListener(MessageDispatcher.EXPORT, onCommandHandler);
				ExportDataCommand.instance.export(ImportDataProxy.getInstance().dataExportID, ImportDataProxy.getInstance().isTextureChanged);
			}
			
			private function onCommandHandler(_e:Message):void{
				closeWindow();
			}
			
			private function closeWindow():void{
				MessageDispatcher.removeEventListener(MessageDispatcher.EXPORT, onCommandHandler);
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	<s:VGroup x="10" y="10" width="100" height="150" gap="6" horizontalAlign="right">
		<s:Label width="100%" height="24" text="Export to" textAlign="right"
				 verticalAlign="middle"/>
	</s:VGroup>
	<s:VGroup x="120" y="10" width="160" height="150" gap="6">
		<s:ComboBox width="100%" height="24" dataProvider="{ImportDataProxy.getInstance().dataExportAC}"
					selectedIndex="@{ImportDataProxy.getInstance().dataExportID}" textAlign="right"/>
	</s:VGroup>
	<s:Button right="140" bottom="20" width="100" height="24" label="OK" click="exportData()"/>
	<s:Button right="20" bottom="20" width="100" height="24" label="Cancel" click="closeWindow()"/>
</s:TitleWindow>
